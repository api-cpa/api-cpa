<% content_for(:page_title) { @price_parameter.name } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">
    <%= link_to t('actions.edit'), edit_service_price_price_parameter_path(current_service, @price_parameter), class: 'btn btn-secondary' %>
    <table class="table">
      <tbody>
      <tr>
        <td><%= t('activerecord.attributes.price_parameter.parameter') %></td>
        <td><%= @price_parameter.parameter %></td>
      </tr>
      <tr>
        <td><%= t('activerecord.attributes.price_parameter.free_call') %></td>
        <td><%= @price_parameter.free_call %></td>
      </tr>
      <tr>
        <td><%= t('activerecord.attributes.price_parameter.periode_by_h_reset_free') %></td>
        <td><%= @price_parameter.periode_by_h_reset_free %></td>
      </tr>
      <tr>
        <td><%= t('activerecord.attributes.price_parameter.cost_by_call') %></td>
        <td><%= @price_parameter.cost_by_call %></td>
      </tr>
      </tbody>
    </table>
    <% if current_user.is_admin? || @price_parameter.user == current_user %>
        <%= button_to t('actions.destroy'), service_price_price_parameter_path(current_service, @price_parameter), class: 'btn btn-danger', data: {confirm: "Are you sure?" }, method: :delete %>
    <% end %>
    <% if current_user.is_admin? || @price_parameter.user == current_user %>
        <% if @price_parameter.activate %>
            <%= button_to t('actions.deactivate'), service_price_price_parameters_toogle_activate_path(current_service, @price_parameter, id: @price_parameter.id), class: 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :post %>
        <% else %>
            <%= button_to t('actions.activate'), service_price_price_parameters_toogle_activate_path(current_service, @price_parameter, id: @price_parameter.id), class: 'btn btn-primary', data: { confirm: "Are you sure?" }, method: :post %>
        <% end %>
    <% end %>
  </div>
</div>
