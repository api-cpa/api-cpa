<% content_for(:page_back) { back_office_contracts_path } %>
<% content_for(:page_title) { @page_title } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link" href="<%= edit_back_office_contract_path(@contract) %>">
          <i class="fa fa-fw fa-pencil"></i> <%= t('actions.edit') %>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= comments_back_office_contract_path(@contract) %>">
          <i class="fa fa-fw fa-comments"></i> <%= t('activerecord.models.comment').pluralize %>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">
          <i class="fa fa-fw fa-history"></i> <%= t('misc.audit') %>
        </a>
      </li>
    </ul>

    <%= render partial: 'shared/versions', locals: {objects: [@contract] + @contract.comments.to_a + [@contract.price]} %>

  </div>
</div>