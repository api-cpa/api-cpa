<% content_for(:page_controls) {
  "#{link_to "#{t('actions.new')} (fr)", new_back_office_documentation_path(documentation_locale: :fr), class: 'btn btn-primary'}
    #{link_to "#{t('actions.new')} (en)", new_back_office_documentation_path(documentation_locale: :en), class: 'btn btn-primary'}".html_safe
} %>
<% content_for(:page_title) { t('.title') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <% I18n.available_locales.each do |locale| %>
      <h4><%= t("misc.locales.#{locale}") %></h4>
      <table class="table table-sm table-hover">
        <thead>
        <tr>
          <th>
            <%= t('activerecord.attributes.documentation.title') %>
          </th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @collection.select {|el| el.locale.to_sym == locale}.each do |doc| %>
          <tr>
            <td>
              <%= doc.title %>
            </td>
            <td class="text-right">
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_back_office_documentation_path(doc), class: 'btn btn-secondary btn-sm', title: t('actions.edit'), data: {toggle: 'tooltip', placement: 'top'} %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, back_office_documentation_path(doc), title: t('actions.destroy'), data: {confirm: 'Are you sure?', toggle: 'tooltip', placement: 'top'}, method: :delete, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
