<%= simple_form_for [:back_office, current_proxy, current_route, @query_parameter] do |f| %>

  <%= f.input :name %>
    <!--%= f.input :mode, as: :radio_buttons , enum: QueryParameter::MODES %-->
    <%= f.input :mode, as: :select, collection: format_mode_for_select, include_blank: t('.default_mode', mode: t("types.mode.#{@query_parameter.mode}")) %>

    <div class="actions">
    <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
  </div>

<% end %>
