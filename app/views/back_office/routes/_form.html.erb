<%= simple_form_for [:back_office, current_functionality, @route] do |f| %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :protocol %>
  <%= f.input :hostname %>
  <%= f.input :port %>
  <%= f.input :url %>

  <div class="actions">
    <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
  </div>

<% end %>
