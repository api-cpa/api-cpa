<% content_for(:page_title) { current_bank_detail.name } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= render partial: 'show_bank_detail_info', locals: {bank_detail: current_bank_detail} %>

    <hr />
    <% unless current_contract.nil? %>
        <%= link_to t('actions.edit'), (@service.nil? ? edit_contract_bank_detail_path(current_contract, current_bank_detail, entreprise_owner_id: current_entreprise_owner) : edit_service_contract_bank_detail_path(@service, current_contract, current_bank_detail, entreprise_owner_id: current_entreprise_owner)), class: 'btn btn-secondary' %>
        <%= link_to t('actions.destroy'), (@service.nil? ? contract_bank_detail_path(current_contract, current_bank_detail, entreprise_owner_id: current_entreprise_owner) : service_contract_bank_detail_path(@service, current_contract, current_bank_detail, entreprise_owner_id: current_entreprise_owner)), method: :delete, class: 'btn btn-secondary' %>
    <% else %>
        <%= link_to t('actions.edit'), edit_service_bank_detail_path(current_entreprise_owner, current_bank_detail.id), class: 'btn btn-primary' %>
        <%= link_to t('actions.destroy'), service_bank_detail_path(current_entreprise_owner, current_bank_detail.id), method: :delete, class: 'btn btn-danger' %>
    <% end%>

  </div>
</div>
