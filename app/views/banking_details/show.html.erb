<% content_for(:page_title) { t('.title') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <h4><%= @banking_detail.name %></h4>

    <hr />

    <h5><%= t('activerecord.attributes.banking_detail.account_owner') %></h5>
    <strong><%= @banking_detail.account_owner %></strong>

    <hr />

    <h5><%= t('activerecord.attributes.banking_detail.bank_name') %></h5>
    <strong><%= @banking_detail.bank_name %></strong>

    <hr />

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t('activerecord.attributes.banking_detail.iban')%></label>
      <div class="col-sm-10">
        <input type="text" class="form-control" readonly="readonly" value="<%= @banking_detail.iban %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t('activerecord.attributes.banking_detail.bic')%></label>
      <div class="col-sm-10">
        <input type="text" class="form-control" readonly="readonly" value="<%= @banking_detail.bic %>">
      </div>
    </div>

    <hr />

    <%= link_to t('actions.edit'), edit_service_banking_detail_path(current_service, @banking_detail.id), class: 'btn btn-primary' %>
    <%= link_to t('actions.destroy'), service_banking_detail_path(current_service, @banking_detail.id), method: :delete, class: 'btn btn-danger' %>

  </div>
</div>
