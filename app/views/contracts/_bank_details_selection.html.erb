<% content_for(:page_description) { t('.description') } %>
<% content_for(:page_title) { t('.title') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <% if @bank_detail_templates.size == 0 %>
      <p class="text-muted"><%= t('misc.no_bank_detail') %></p>
      <%= link_to t('actions.create_bank_detail_template'), new_service_bank_detail_path(@service_owner), class: 'btn btn-primary' %>
    <% else %>
      <%
        @bank_detail_templates.each.with_index do |bank_detail_template, index|
          if (@contract.client.id == @service_owner.id)
            url = (!current_service.nil? ? client_select_bank_detail_service_contract_path(current_service, current_contract, bank_detail_id: bank_detail_template.id) : client_select_bank_detail_contract_path(current_contract, bank_detail_id: bank_detail_template.id))
          elsif
            url = (!current_service.nil? ? startup_select_bank_detail_service_contract_path(current_service, current_contract, bank_detail_id: bank_detail_template.id) : startup_select_bank_detail_contract_path(current_contract, bank_detail_id: bank_detail_template.id))
          end
      %>
        <% if index > 0 %>
        <hr>
        <% end %>
        <div class="row">
          <div class="col-md-3 text-md-right">
            <h4><%= bank_detail_template.name %></h4>
          </div>
          <div class="col-md-9">
            <%= render partial: 'bank_details/show_bank_detail_info', locals: {bank_detail: bank_detail_template} %>
            <hr />
            <div class="text-right">
              <%= link_to t('actions.select'), url, method: :post, class: 'btn btn-primary btn-lg ' %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
