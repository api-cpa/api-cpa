<% content_for(:page_title) { t('types.service_types.client.title') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= render partial: 'bank_details' %>

    <hr>
    <div class="row">
      <div class="col-4">
      </div>
      <div class="col-8">
        <%= link_to t('actions.destroy'), (@service.nil? ? delete_client_bank_detail_contract_path(current_contract) : delete_client_bank_detail_service_contract_path(current_service, current_contract)), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>

    <% if @bank_detail_templates.size == 0 %>
      <p class="text-muted"><%= t('misc.no_bank_detail') %></p>
      <%= link_to t('actions.create_bank_detail_template'), new_service_bank_detail_path(@service_owner), class: 'btn btn-primary' %>
    <% else %>
      <%= link_to t('actions.select_new_template'), (@service.nil? ? client_bank_details_selection_contract_path(current_contract) : client_bank_details_selection_service_contract_path(current_service, current_contract)), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
