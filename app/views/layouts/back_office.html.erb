<!DOCTYPE html>
<html>
<head>
  <title><% if content_for?(:page_title) %><%= content_for(:page_title) %> / <% end %> <%= t('config.platform_name') %></title>
  <%= csrf_meta_tags %>

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <div class="container">

    <div class="b-io-topbar">
      <div class="container-fluid">
        <%= render 'shared/topbar' %>
      </div>
    </div>

    <div class="b-io-header">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h1>BackOffice</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <ul class="nav nav-pills">
              <li class="nav-item">
                <a class="nav-link <%= 'active' if controller_name == 'users' %>" href="<%= back_office_users_path %>"><%= t('activerecord.models.user').pluralize %></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/flash' %>

    <div class="b-io-main-container">

      <% unless current_proxy.nil? %>
        <div class="b-io-menu">
          <%= render 'shared/menu' %>
        </div>
      <% end %>

      <div class="b-io-content <%= 'b-io-content--with-menu' unless current_proxy.nil? %>">
        <div class="b-io-content--header">
          <div class="container">
            <h3><%= content_for(:page_title) %></h3>
            <% if content_for?(:page_description) %>
              <p><%= content_for(:page_description) %></p>
            <% end %>
          </div>
        </div>

        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
