<!DOCTYPE html>
<html>
<head>
  <title><% if content_for?(:page_title) %><%= content_for(:page_title) %> / <% end %> <%= t('config.platform_name') %></title>
  <%= csrf_meta_tags %>

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <div class="container-fluid">

    <div class="b-io-topbar">
      <div class="container-fluid">
        <%= render partial: 'shared/topbar' %>
      </div>
    </div>

    <div class="b-io-header">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <h1><%= t('misc.back_office') %></h1>
          </div>
        </div>
        <%= render_breadcrumbs builder: ::BootstrapBreadcrumbsBuilder %>
      </div>
    </div>

    <div class="b-io-main-container">

      <div class="b-io-menu">
        <div class="b-io-menu--secondary">
          <div class="list-group">
            <%= link_to t('misc.back_office'), back_office_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'back_office' && action_name == 'index' }" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.user').pluralize, back_office_users_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'users'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.service').pluralize, back_office_services_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'services'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.contract').pluralize, back_office_contracts_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'contracts'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.bank_detail').pluralize, back_office_bank_details_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'bank_details'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.category').pluralize, back_office_categories_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'categories'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.general_condition').pluralize, back_office_general_conditions_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'general_conditions'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.ticket').pluralize, back_office_tickets_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'tickets'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.documentation').pluralize, back_office_documentations_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'documentations'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('activerecord.models.appconfig'), back_office_appconfigs_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'appconfigs'}" %>
          </div>
          <div class="list-group">
            <%= link_to t('error_measurements.index.title'), back_office_error_measurements_path, class: "list-group-item list-group-item-action #{'active' if controller_name == 'back_office' && action_name == 'error_measurements' }" %>
          </div>
        </div>
      </div>


      <div class="b-io-content b-io-content--with-menu">

        <div class="b-io-content--header">
          <div class="container-fluid">
            <% if content_for?(:page_controls) %>
              <div class="b-io-content--header--controls"><%= content_for(:page_controls) %></div>
            <% end %>
            <h3>
              <% if content_for?(:page_back) %>
                <%= link_to t('actions.back'), content_for(:page_back), class: 'btn btn-link btn-sm' %>
              <% end %>
              <%= content_for(:page_title) %>
            </h3>
            <% if content_for?(:page_description) %>
              <p><%= content_for(:page_description) %></p>
            <% end %>
          </div>
        </div>

        <%= yield %>

      </div>
    </div>
  </div>

  <%= render partial: 'shared/modal_window' %>

  <%= render partial: 'shared/flash' %>

  <%= javascript_include_tag 'application' %>
  <script type="text/javascript">
    I18n.locale = '<%= I18n.locale %>';
  </script>

</body>
</html>
