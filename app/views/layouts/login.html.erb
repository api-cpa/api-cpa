<!DOCTYPE html>
<html>
<head>
  <title><% if content_for?(:page_title) %><%= content_for(:page_title) %> / <% end %> <%= t('config.platform_name') %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>

  <%= render partial: 'shared/favicon' %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700" rel="stylesheet">
  <%= stylesheet_link_tag    'login', media: 'all' %>
</head>

<body class="login <%= 'with-warning' if controller_name == 'password_expired' %>">

  <div id="form-container">

    <div class="container-fluid">
      <p class="logo">
        <%= link_to root_path do %>
          <img src="/dashboard/baasile-io<%= '-homepage' if controller_name == 'password_expired' %>.png" class="img-fluid">
        <% end %>
      </p>

      <h1>
        <%= content_for(:page_title) %>
      </h1>

      <%= yield %>

      <%= render partial: "users/shared/links" if controller_name != 'password_expired' %>
    </div>

  </div>

  <div id="big-image">
    <div id="litte-space-man"></div>
  </div>

  <%= render partial: 'shared/modal_window' %>

  <%= render partial: 'shared/flash' %>

  <%= javascript_include_tag 'application' %>

  <script type="text/javascript">
    I18n.locale = '<%= I18n.locale %>';
  </script>

  <%= content_for(:extra_js) %>

</body>
</html>
