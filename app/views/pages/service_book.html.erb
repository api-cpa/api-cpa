<% content_for(:page_title) { t('.title') } %>

<div class="b-io-content--secondary">
  <div class="container">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Activated</th>
      </tr>
      </thead>
      <tbody>
      <% @collection.each do |service| %>
          <tr>
            <td><%= service.name %></td>
            <td><%= service.description %></td>
            <td><%= service.is_activated? %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
