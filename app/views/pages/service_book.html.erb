<% content_for(:page_title) { t('.title') } %>
<% content_for(:page_description) { t('.description') } %>

<div class="b-io-content--secondary">
  <div class="container">
    <% @collection.each.with_index do |service, index| %>
      <%= '<hr>' if index > 1 %>
      <div class="row">
        <div class="col-sm-2">
          <%= image_tag asset_path('no-image.png'), class: 'img-fluid' %>
        </div>
        <div class="col-sm-7">
          <h5><%= service.name %></h5>
          <%= service.description %>
        </div>
        <div class="col-sm-3">
          <%= service.proxies.count %> fonctionnalit√©<%= 's' if service.proxies.count > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>
