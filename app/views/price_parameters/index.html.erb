<% content_for(:page_title) { t('.title') } %>
<% if current_user.is_commercial_to_create? %>
  <% content_for(:page_controls) { link_to t('actions.new'), new_service_price_price_parameter_path(current_service), class: 'btn btn-primary' } %>
<% end %>
<div class="b-io-content--secondary">
  <div class="container-fluid">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @collection.each do |price_parameter| %>
        <tr>
          <td><%= price_parameter.name %></td>
          <td class="text-right">
            <%= link_to t('misc.dashboard'), service_price_price_parameter_path(current_service, price_parameter), class: 'btn btn-secondary' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
