<% if @contract.nil? %>
    <%= simple_form_for [current_service, current_proxy, @price] do |f| %>
        <%= error_messages_for(@price) %>

        <%= f.input :name %>
        <%= f.input :base_cost %>
        <%= f.input :cost_by_time %>

        <div class="row">
          <div class="actions col-md-9 offset-md-3">
            <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
          </div>
        </div>
    <% end %>
<% elsif !@company.nil? %>
    <%= simple_form_for [@company, @contract, @price] do |f| %>
        <%= error_messages_for(@price) %>

        <%= f.input :name %>
        <%= f.input :base_cost %>
        <%= f.input :cost_by_time %>

        <div class="row">
          <div class="actions col-md-9 offset-md-3">
            <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
          </div>
        </div>
    <% end %>
<% elsif !@service.nil? %>
    <%= simple_form_for [current_service, @contract, @price] do |f| %>
        <%= error_messages_for(@price) %>

        <%= f.input :name %>
        <%= f.input :base_cost %>
        <%= f.input :cost_by_time %>

        <div class="row">
          <div class="actions col-md-9 offset-md-3">
            <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
          </div>
        </div>
    <% end %>
<% else %>
    <%= simple_form_for [@contract, @price] do |f| %>
        <%= error_messages_for(@price) %>

        <%= f.input :name %>
        <%= f.input :base_cost %>
        <%= f.input :cost_by_time %>

        <div class="row">
          <div class="actions col-md-9 offset-md-3">
            <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
          </div>
        </div>
    <% end %>
<% end %>

