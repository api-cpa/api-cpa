<%= simple_form_for object do |f| %>

  <%= error_messages_for(f.object) %>

  <%= (f.input :name, required: true) if f.object.contract.nil? %>

  <%= f.input :pricing_type, collection: format_pricing_types_for_select, include_blank: false, input_html: {class: 'select2 col-sm-5'} %>

  <%= f.input :route_id, collection: format_routes_for_select(@routes), input_html: {class: 'select2'}, include_blank: t('misc.all_feminized') %>

  <%= f.input :pricing_duration_type, collection: format_pricing_duration_types_for_select, include_blank: false, input_html: {class: 'select2 col-sm-5'} %>

  <%= f.input :base_cost, as: :string, input_html: {class: 'autonumeric col-sm-3'} %>
  <%= f.input :free_count, as: :string, input_html: {class: 'col-sm-3'} %>
  <%= f.input :deny_after_free_count, as: :radio_buttons, collection: format_boolean_values_for_input, hint: t('.hints.deny_after_free_count') %>
  <%= f.input :unit_cost, as: :string, input_html: {class: 'autonumeric col-sm-3'} %>

  <div class="row">
    <div class="actions col-md-9 offset-md-3">
      <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
    </div>
  </div>

<% end %>
