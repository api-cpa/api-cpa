<% content_for(:page_title) { @price.name } %>
<% if current_user.is_admin? || @price.user == current_user %>
    <%= content_for(:page_controls) { link_to t('actions.destroy'), service_price_path(current_service, @price), class: 'btn btn-danger', data: {confirm: "Are you sure?" }, method: :delete } %>
<% end %>
<% if current_user.is_admin? || @price.user == current_user %>
    <% if @price.activate %>
        <%= content_for(:page_controls) { link_to t('actions.deactivate'), service_price_toogle_activate_path(current_service, @price, id: @price.id), class: 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :post } %>
    <% else %>
        <%= content_for(:page_controls) { link_to t('actions.activate'), service_price_toogle_activate_path(current_service, @price, id: @price.id), class: 'btn btn-primary', data: { confirm: "Are you sure?" }, method: :post } %>
    <% end %>
<% end %>
<% if current_user.is_commercial_to_create? %>
    <% content_for(:page_controls) { link_to t('actions.add'), new_service_price_price_parameter_path(current_service, @price), class: 'btn btn-primary' } %>
<% end %>

<div class="b-io-content--secondary">
  <div class="container-fluid">
    <%= link_to t('actions.edit'), edit_service_price_path(current_service, @price), class: 'btn btn-secondary' %>
    <table class="table">
      <tbody>
      <tr>
        <td><%= t('activerecord.attributes.price.base_cost') %></td>
        <td><%= @price.base_cost %></td>
      </tr>
      <tr>
        <td><%= t('activerecord.attributes.price.free_hour') %></td>
        <td><%= @price.free_hour %></td>
      </tr>
      <tr>
        <td><%= t('activerecord.attributes.price.cost_by_time') %></td>
        <td><%= @price.cost_by_time %></td>
      </tr>
      </tbody>
    </table>
    <%= render 'show_price_parameters' %>
  </div>
</div>