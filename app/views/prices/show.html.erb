<% content_for(:page_title) { current_price.name } %>

<%= content_for(:page_controls) { link_to t('actions.destroy'), service_proxy_price_path(current_service, current_proxy, current_price), class: 'btn btn-danger', data: {confirm: "Are you sure?" }, method: :delete } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= render partial: 'form', locals: {object: [current_service, current_proxy, current_price]} %>

  </div>
</div>

<div class="b-io-content--header">
  <div class="container-fluid">
    <div class="b-io-content--header--controls">
      <%= link_to t('actions.add'), new_service_proxy_price_price_parameter_path(current_service, current_proxy, current_price), class: 'btn btn-primary' %>
    </div>
    <h4><%= t('activerecord.attributes.price.price_parameters') %></h4>
  </div>
</div>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= render partial: 'show_price_parameters', locals: {price_parameters: current_price.price_parameters} %>

  </div>
</div>