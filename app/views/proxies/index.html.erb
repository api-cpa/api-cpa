<% content_for(:page_title, t('.title')) %>
<% content_for(:page_description, t('.description')) %>
<% content_for(:page_controls) { link_to t('actions.new'), new_service_proxy_path(current_service), class: 'btn btn-primary' } %>

<div class="b-io-content--secondary">

  <div class="container-fluid">
    <table class="table">
      <thead class="">
      <tr>
        <th><%= t('activerecord.attributes.proxy.name') %></th>
        <th><%= t('activerecord.attributes.proxy.description') %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @collection.each do |proxy| %>
        <tr>
          <td><i class="fa fa-server"></i> <%= proxy.name %></td>
          <td><%= proxy.description %></td>
          <td class="text-right">
            <%= link_to t('misc.dashboard'), service_proxy_path(current_service, proxy), class: 'btn btn-secondary' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
