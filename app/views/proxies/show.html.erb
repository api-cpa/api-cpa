<% content_for(:page_title) { t('misc.overview') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= @proxy.description %>

    <hr>
    <h5>API</h5>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">URI</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" readonly="readonly" value="<%= current_host %>/api/v1/<%= current_service.subdomain %>/proxies/<%= @proxy.subdomain %>">
        <input type="email" class="form-control" readonly="readonly" value="<%= current_host %>/api/v1/<%= current_service.subdomain %>/proxies/<%= @proxy.id %>">
      </div>
    </div>

    <hr />
    <h5>Routes</h5>
    <p><%= @proxy.routes.count %> route(s)</p>

    <hr>
    <div class="text-right">
      <%= link_to t('actions.destroy'), service_proxy_path(current_service, @proxy), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-secondary btn-danger' %>
    </div>

  </div>
</div>
