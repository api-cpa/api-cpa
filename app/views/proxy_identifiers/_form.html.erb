<%= simple_form_for [current_service, current_proxy, @proxy_identifier] do |f| %>

  <%= error_messages_for(@proxy_identifier) %>

  <%= f.input :client_id %>
  <%= f.input :client_secret %>

  <div class="actions">
    <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
  </div>

<% end %>
