<%= simple_form_for [current_service, current_proxy, current_route, @query_parameter] do |f| %>

  <%= error_messages_for(f.object) %>

  <%= f.input :query_parameter_type, collection: format_query_parameter_types_for_select, input_html: {class: 'col-sm-4 select2'} %>
  <%= f.input :name, hint: t('.hints.name'), input_html: {class: 'col-sm-4'} %>
  <%= f.input :mode, as: :radio_buttons, collection: format_query_parameter_modes_for_select %>
  <%= f.input :default_value, hint: t('.hints.default_value') %>
  <%= f.input :description, as: :text, input_html: {rows: 3}, hint: t('.hints.description') %>
  <%= f.input :sample_value, as: :text, input_html: {rows: 5} %>

  <div class="row">
    <div class="actions col-md-9 offset-md-3">
      <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
    </div>
  </div>

<% end %>
