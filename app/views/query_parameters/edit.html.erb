<%
  content_for(:page_title) {
    t('.title')
  }

  content_for(:page_back) {
    service_proxy_route_query_parameters_path(current_service, current_proxy, current_route)
  }
%>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= render partial: 'form' %>

    <div class="col text-right">
      <%= link_to '<i class="fa fa-fw fa-trash"></i>'.html_safe, service_proxy_route_query_parameter_path(current_service, @query_parameter.route.proxy, @query_parameter.route, @query_parameter), title: t('actions.destroy'), data: {confirm: 'Are you sure?', toggle: 'tooltip', placement: 'top'}, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</div>