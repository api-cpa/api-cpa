<% content_for(:page_title, t('.title')) %>
<% content_for(:page_controls) { link_to t('actions.new'), new_service_proxy_route_path(current_service), class: 'btn btn-primary' } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <table class="table table-hover table-sm">
      <thead>
      <tr>
        <th><%= t('activerecord.attributes.route.name') %></th>
        <th><%= t('activerecord.attributes.route.url') %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @collection.each do |route| %>
        <tr>
          <td><%= route.name %></td>
          <td><%= route.url %></td>
          <td class="text-right">
            <%= link_to t('misc.dashboard'), service_proxy_route_path(current_service, route.proxy, route), class: 'btn btn-sm btn-secondary' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
