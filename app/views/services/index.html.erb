<% content_for(:page_title) { t('.title') } %>
<% content_for(:page_controls) { link_to t('actions.new'), new_service_path, class: 'btn btn-primary' } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Activated</th>
        <th>PubliÃ© sur l'annuaire</th>
        <% if current_user.has_role?(:superadmin) %>
          <th>Admin</th>
        <% end %>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @collection.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.is_activated? %></td>
        <td><%= service.public %></td>
        <% if current_user.is_superadmin? %>
          <td>
            <% if service.is_activated? %>
              <%= link_to t('actions.permissions'), service_permissions_list_services_path(service.id), class: 'btn btn-secondary' %>
            <% end %>
          </td>
        <% end %>
        <td class="text-right">
          <%= link_to t('misc.dashboard'), service_path(service.id), class: 'btn btn-secondary' %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
