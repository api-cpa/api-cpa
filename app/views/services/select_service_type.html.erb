<%
  if current_user.services.count > 0
    content_for(:page_back) {
      services_path
    }
  end

  content_for(:page_title) {
    t('services.new.title')
  }
%>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <div class="row">
      <% Service::SERVICE_TYPES.each do |key, _| %>
        <div class="col-12 col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title <%= t("types.service_types.#{key}.class") %>">
                <i class="<%= t("types.service_types.#{key}.icon") %>"></i>
                <%= t("types.service_types.#{key}.title") %>
              </h4>
              <p class="card-text">
                <%= t("types.service_types.#{key}.description") %>
              </p>
              <div class="text-right">
                <%= link_to new_service_path(service_type: key), class: 'btn btn-primary' do %>
                  <i class="fa fa-fw fa-plus-circle"></i> <%= t("actions.new_#{key}") %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
