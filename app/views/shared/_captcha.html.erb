<div class="form-group required <%= 'has-danger' if f.object.errors.key?(:base) %>">
  <label class="form-control-label" for="captcha">
    <abbr title="required">*</abbr>
    <%= t('misc.captcha') %>
  </label>
  <div class="row">
    <div class="col-md-3 col-lg-2">
      <%= captcha_tag '', class: 'img-fluid' %>
    </div>
    <div class="col-md-9 col-lg-10">
      <%= text_field_tag :captcha, '', class:'form-control string required' %>
      <small class="form-text text-muted"><%= t('misc.captcha_hint') %></small>
    </div>
  </div>
</div>