<div class="b-io-topbar">
  <div class="container-fluid">
    <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
      <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
      <div class="collapse navbar-toggleable-md" id="navbarResponsive">
        <a class="navbar-brand" href="<%= root_path %>"><%= t('config.platform_name') %></a>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <a class="nav-link <%= 'active' if current_module == 'service_book' %>" href="<%= service_book_path %>"><%= t('pages.service_book.title') %></a>
          </li>
          <% if !current_user.nil? %>
            <% if current_user.is_superadmin || current_user.is_campany_admin%>
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_module == 'companies' %>" href="<%= companies_path %>"><%= t('companies.index.title') %></a>
              </li>
            <% end %>
            <li class="nav-item">
              <a class="nav-link <%= 'active' if current_module == 'dashboard' %>" href="<%= services_path %>"><%= t('services.index.title') %></a>
            </li>
            <% if current_user.is_superadmin %>
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_module == 'users' %>" href="<%= users_path %>"><%= t('users.index.title') %></a>
              </li>
            <% end %>
          <% end %>
        </ul>
        <div class="float-lg-right">
          <% if current_user.nil? %>
            <a href="<%= new_user_session_path %>" class="btn btn-outline-info"><%= t('actions.sign_in') %></a>
            <a href="<%= new_user_registration_path %>" class="btn btn-outline-info"><%= t('actions.sign_up') %></a>
          <% else %>
            <%= link_to current_user.full_name, profile_path, class: 'btn btn-info' %>
            <%= link_to t('actions.sign_out'), destroy_user_session_path, method: :delete, class: 'btn btn-info' %>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</div>
