<div class="b-io-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h4>
          <span class="text-muted"><%= link_to t('misc.pricing'), service_proxy_prices_path(current_service, current_proxy), class: '' %> <i class="fa fa-fw fa-caret-right"></i></span>
          <%= current_price.name %>
        </h4>
      </div>
    </div>
  </div>
  <hr/>
  <div class="container">
    <ul class="nav nav-pills" style="font-size: 90%;">
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'prices' && action_name == 'show' %>" href="<%= service_proxy_price_path(current_service, current_proxy, current_price) %>"><i class="fa fa-dashboard fa-fw"></i> <%= t('misc.overview') %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'prices' && ['edit', 'update'].include?(action_name) %>" href="<%= edit_service_proxy_price_path(current_service, current_proxy, current_price) %>"><i class="fa fa-pencil fa-fw"></i> <%= t('actions.edit') %></a>
      </li>
    </ul>
  </div>
</div>