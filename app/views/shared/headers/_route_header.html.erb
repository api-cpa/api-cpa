<div class="b-io-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h4>
          <span class="text-muted"><%= link_to "#{t('activerecord.models.route').pluralize}".html_safe, service_proxy_routes_path(current_service, current_proxy), class: '' %> <i class="fa fa-fw fa-caret-right"></i></span>
          <%= current_route.name %>
        </h4>
      </div>
    </div>
  </div>
  <hr/>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <ul class="nav nav-pills" style="font-size: 90%;">
          <li class="nav-item">
            <a class="nav-link <%= 'active' if controller_name == 'routes' && action_name == 'show' %>" href="<%= service_proxy_route_path(current_service, current_proxy, current_route) %>"><i class="fa fa-dashboard fa-fw"></i> <%= t('misc.overview') %></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle
                      <%= 'active' if (controller_name == 'routes' && ['edit', 'update'].include?(action_name)) ||
                                      (controller_name == 'routes' && ['audit'].include?(action_name)) ||
                                      (controller_name == 'routes' && ['confirm_destroy'].include?(action_name)) %>" href="<%= edit_service_proxy_route_path(current_service, current_proxy, current_route) %>"
               data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-cog fa-fw"></i> <%= t('misc.parameters') %>
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item <%= 'active' if controller_name == 'routes' && ['edit', 'update'].include?(action_name) %>" href="<%= edit_service_proxy_route_path(current_service, current_proxy, current_route) %>"><i class="fa fa-pencil fa-fw"></i> <%= t('actions.edit') %></a>
              <a class="dropdown-item <%= 'active' if controller_name == 'routes' && ['audit'].include?(action_name) %>" href="<%= audit_service_proxy_route_path(current_service, current_proxy, current_route) %>"><i class="fa fa-history fa-fw"></i> <%= t('misc.history') %></a>
              <a class="dropdown-item <%= 'active' if controller_name == 'routes' && ['confirm_destroy'].include?(action_name) %>" href="<%= confirm_destroy_service_proxy_route_path(current_service, current_proxy, current_route) %>"><i class="fa fa-trash-o fa-fw"></i> <%= t('actions.destroy') %></a>
              <a class="dropdown-item <%= 'active' if ['requests', 'process_requests'].include?(controller_name) %>" href="<%= service_proxy_tester_requests_path(current_service, current_proxy) %>"><i class="fa fa-magic fa-fw"></i> <%= t('tester.title') %></a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= 'active' if controller_name == 'query_parameters' %>" href="<%= service_proxy_route_query_parameters_path(current_service, current_proxy, current_route) %>"><i class="fa fa-list fa-fw"></i> <%= t('query_parameters.index.title') %></a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>