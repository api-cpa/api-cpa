<% content_for(:page_title) { t('tester.requests.new.title') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= simple_form_for Tester::Requests::Standard.new,
                        method: :get,
                        url: new_service_proxy_tester_request_path(current_service, current_proxy) do |f| %>

      <%= f.input :route_id,
                  collection: format_routes_for_select(@routes),
                  input_html: {
                    class: 'select2'
                  },
                  include_blank: false %>

      <div class="row">
        <div class="actions col-md-9 offset-md-3">
          <%= f.button :submit,
                       value: I18n.t('actions.select'),
                       class: 'btn btn-primary',
                       data: { disable_with: t('actions.select') } %>
        </div>
      </div>

    <% end %>

  </div>
</div>

<% content_for(:extra_js) do %>
  <script type="text/javascript">
    window.activate_select2();
  </script>
<% end %>