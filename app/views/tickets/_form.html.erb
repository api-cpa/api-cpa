<%= simple_form_for [@ticket] do |f| %>

  <%= error_messages_for(f.object) %>

  <%= f.input :subject %>
  <%= f.input :ticket_type, as: :select, collection: format_ticket_type_for_select %>

  <%= f.simple_fields_for @new_comment do |f2| %>
      <%= f2.input :body, as: :trix_editor, label: t('actions.add_comment'), required: false, input_html: {rows: 5, name: 'new_comment'} %>
  <% end %>

  <div class="row">
    <div class="actions col-md-9 offset-md-3">
      <%= f.button :submit, value: I18n.t('actions.send_ticket'), data: { disable_with: t('actions.send_in_progress') } %>
    </div>
  </div>

<% end %>
