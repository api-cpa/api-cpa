<% content_for(:page_title) { t('actions.new') } %>

<div class="b-io-content--secondary">
  <div class="container">
    <%= simple_form_for @user, url: admin_create_path, method: :post do |f| %>
      <%= f.input :email%>
      <%= f.input :password%>
      <%= f.input :password_confirmation%>
      <div class="actions">
        <%= f.button :submit, value: I18n.t('actions.save'), data: { disable_with: t('actions.save_in_progress') } %>
      </div>
    <% end %>
  </div>
</div>
