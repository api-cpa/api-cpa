<% content_for(:page_title) { t('.title') } %>

<div class="b-io-content--secondary">
  <div class="container-fluid">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.input :email, hint: (t('devise.registrations.pending_reconfirmation', email: resource.unconfirmed_email) if resource.pending_reconfirmation?) %>

      <%= f.input :gender, as: :select, collection: format_genders_for_select, input_html: {class: 'col-sm-2'} %>

      <%= f.input :first_name %>
      <%= f.input :last_name %>

      <%= f.input :phone, hint: t('users.form.hints.phone') %>
      <%= f.input :language , as: :radio_buttons, collection: format_languages_for_select %>

      <%= f.input :password, autocomplete: "off", hint: t('devise.passwords.password_restrictions') %>
      <%= f.input :password_confirmation, autocomplete: "off" %>

      <%= f.input :current_password, required: true, autocomplete: "off" %>

      <div class="row">
        <div class="actions col-md-9 offset-md-3">
          <%= f.button :submit, value: I18n.t('actions.edit'), data: { disable_with: t('actions.save_in_progress') } %>
        </div>
      </div>

    <% end %>

  </div>
</div>

<div class="b-io-content--secondary">
  <div class="container-fluid">
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

  </div>
</div>
