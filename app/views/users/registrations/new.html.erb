<% content_for(:page_title) { t('.title') } %>

<div class="b-io-content--secondary">
  <div class="container">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.input :email, required: true, autofocus: true %>

      <div class="row">
        <div class="col-md-2">
          <%= f.input :gender, as: :select, collection: format_gender_for_select %>
        </div>
        <div class="col-md-5">
          <%= f.input :first_name %>
        </div>
        <div class="col-md-5">
          <%= f.input :last_name %>
        </div>
      </div>

      <%= f.input :phone %>

      <%= f.input :password, required: true, autocomplete: 'off', hint: t('users.passwords.password_restrictions') %>
      <%= f.input :password_confirmation, required: true %>

      <%= render partial: 'shared/captcha', locals: {f: f} %>

      <div class="actions">
        <%= f.button :submit, value: I18n.t('actions.sign_up'), data: { disable_with: t('actions.signin_up') } %>
      </div>
    <% end %>

  </div>
</div>

<div class="b-io-content--secondary">
  <div class="container">

    <%= render "devise/shared/links" %>

  </div>
</div>
