<% content_for(:page_title) { t('.title') } %>
<% content_for(:page_description) { t('.description') } %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.input :email, required: true, autofocus: true %>
  <%= f.input :password, required: true, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, as: :boolean, wrapper: :checkbox %>
  <% end -%>

  <div class="row">
    <div class="actions col-md-9 offset-md-3">
      <%= f.button :submit, value: t('actions.sign_in'), data: { disable_with: t('actions.signin_in') }, class: 'btn btn-lg btn-secondary' %>
    </div>
  </div>
<% end %>