<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>API-CPA</title>
  <link rel="icon" href="<%= getAssetUri('assets/images/api-cpa.ico') %>" />

  <!-- Stylesheets -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.css">
  <style>
    .flash {
      padding-top: 20px;
      margin-bottom: 20px;
    }
    .dashboard {
      margin-top: 52px;
      margin-bottom: 100px;
    }

    .ui.comments {max-width: inherit;}
    body, body.pushable>.pusher {
      background-image: url('<%= getAssetUri('assets/images/dashboard-background.png') %>');
    }
  </style>
  <%- style %>
</head>
<body>

<div class="pusher">

  <div class="ui inverted fixed menu">
    <div class="ui container">
      <a href="/dashboard" class="header item">
        <img class="logo" src="<%= getAssetUri('assets/logo/api-cpa-logo.png') %>">
      </a>
      <div class="ui simple dropdown item">
        <a href="/dashboard/services">
          <i class="cubes icon"></i> Mes services <i class="dropdown icon"></i>
        </a>
        <div class="menu">
          <% if (data.user.services.length > 0) { %>
          <% data.user.services.forEach(function(service) { %>
            <a class="item" href="/dashboard/services/<%= service.nameNormalized %>"><i class="cube icon"></i><%= service.name %></a>
          <% }) %>
          <div class="divider"></div>
          <% } %>
          <a class="item" href="/dashboard/services/new"><i class="add icon"></i>Ajouter un service</a>
        </div>
      </div>
      <a href="/doc" class="item">
        <i class="help circle icon"></i> Documentation
      </a>
      <div class="right menu">
        <a href="/dashboard/account" class="item"><i class="user icon"></i> <%= data.user.firstname %> <%= data.user.lastname %></a>
        <a href="/logout" class="item">DÃ©connexion</a>
      </div>
    </div>
  </div>

  <div class="dashboard">
    <% include ../partials/flash %>
    <%- body %>
  </div>
</div>

<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.js"></script>
<script src="<%= getAssetUri('assets/plugins/tablesort.js') %>"></script>

<script>
  $(document)
    .ready(function() {

      $('.ui.form')
        .form();

      $('.ui.checkbox')
        .checkbox();

      $('table.sortable').tablesort();

      $('table.sortable thead th.sort-by-date').data('sortBy', function(th, td, tablesort) {
        return new Date(td.text());
      });

    });
</script>
<%- script %>
</body>
</html>
