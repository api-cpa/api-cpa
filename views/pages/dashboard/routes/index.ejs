<div class="ui container">
  <% include ../services/header %>
  <% include ./header %>

  <% if (routes.length > 0) { %>
  <table class="ui <% if (routes.length > 1) { %>sortable<% } %> celled table">
    <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>FranceConnect</th>
      <th>Publique</th>
      <th class="two wide no-sort"></th>
    </tr>
    </thead>
    <tbody>
    <% routes.forEach(function(route) { %>
    <tr>
      <td><%= route.name %></td>
      <td><%= route.description %></td>
      <td><%= route.fcRequired ? 'Oui' : 'Non' %></td>
      <td><%= route.public ? 'Oui' : 'Non' %></td>
      <td>
        <a class="ui tiny fluid labeled icon button" href="/dashboard/services/<%= data.service.nameNormalized %>/routes/<%= route.nameNormalized %>">
          <i class="pencil icon"></i>
          Éditer
        </a>
      </td>
    </tr>
    <% }) %>
    </tbody>
  </table>
  <div class="divider"></div>
  <% } else { %>
  <div class="ui segment">
    Vous n'avez créé aucune donnée partagée
  </div>
  <% } %>
</div>
