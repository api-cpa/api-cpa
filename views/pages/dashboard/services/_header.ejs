<div class="ui twice attached segment">
  <h1 class="ui header">
    <img class="ui image" src="<%= data.service.getThumbnail('-100x100bg.png') %>">
    <div class="content">
      <%= data.service.name %>
      <% if (!data.service.validated) { %>
      <div class="ui red horizontal label">
        En attente de validation
      </div>
      <% } else if (data.service.public) { %>
      <div class="ui green horizontal label">
        Référencé sur l'API
      </div>
      <% } else { %>
      <div class="ui grey horizontal label">
        Privé
      </div>
      <% } %>
      <div class="sub header">
        <div class="ui breadcrumb">
          <a class="section" href="/dashboard/services">Tableau de bord</a>
          <i class="right chevron icon divider"></i>
          <div class="active section"><%= data.service.name %></div>
        </div>
      </div>
    </div>
  </h1>
</div>
<div class="ui bottom attached pointing menu">
  <a class="item <% if (page === 'pages/dashboard/services/view') { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>">
    État
  </a>
  <a class="item <% if (page.indexOf('pages/dashboard/routes/') == 0 || page.indexOf('pages/dashboard/fields/') == 0) { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>/routes">
    Bases de données
  </a>
  <a class="item <% if (page === 'pages/dashboard/services/edit') { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>/edit">
    Paramètres du service
  </a>
</div>
<% if (page === 'pages/dashboard/services/edit' || page.indexOf('pages/dashboard/users/') == 0 || page.indexOf('pages/dashboard/tokens/') == 0 || page.indexOf('pages/dashboard/pages/') == 0) { %>
<div class="ui pointing menu">
  <a class="item <% if (page === 'pages/dashboard/services/edit') { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>/edit">
    Paramètres
  </a>
  <a class="item <% if (page.indexOf('pages/dashboard/users/') == 0) { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>/users">
    Collaborateurs
  </a>
  <a class="item <% if (page.indexOf('pages/dashboard/tokens/') == 0) { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>/tokens">
    Jetons de connexion
  </a>
  <a class="item <% if (page.indexOf('pages/dashboard/pages/') == 0) { %>active<% } %>" href="/dashboard/services/<%= data.service.nameNormalized %>/pages">
    Documentation
  </a>
</div>
<% } %>
