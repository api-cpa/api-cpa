<form class="ui large basic form" method="post" action="/dashboard/account">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <div class="required field">
    <label>Nom et prénom</label>
    <div class="two fields">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <input type="text" name="user_lastname" value="<% if (query.user.lastname) { %><%= query.user.lastname %><% } %>" placeholder="Nom">
        </div>
      </div>
      <div class="field">
        <input type="text" name="user_firstname" value="<% if (query.user.firstname) { %><%= query.user.firstname %><% } %>" placeholder="Prénom">
      </div>
    </div>
  </div>

  <div class="required field">
    <label>E-Mail</label>
    <div class="ui left icon input">
      <i class="mail icon"></i>
      <input type="text" name="user_email" value="<% if (query.user.email) { %><%= query.user.email %><% } %>" placeholder="Adresse E-Mail">
    </div>
  </div>


  <div class="ui submit button" tabindex="0">
    Enregistrer les modifications
  </div>

</form>
